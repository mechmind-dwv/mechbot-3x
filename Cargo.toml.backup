[package]
name = "mechbot-3x"
version = "0.1.0"
edition = "2021"

[dependencies]
# Sistema y async
tokio = { version = "1.0", features = ["full"] }
anyhow = "1.0"
thiserror = "1.0"

# Logging
log = "0.4"
env_logger = "0.10"
pretty_env_logger = "0.5"

# Serialización
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"
toml = "0.8"

# Matemáticas y geometría
nalgebra = "0.32"
rand = "0.8"

# Web y APIs
warp = "0.3"
tokio-tungstenite = "0.20"
http = "0.2"
hyper = "0.14"

# Sensores y hardware (dependencias simuladas)
rppal = "0.14"  # Para GPIO en Raspberry Pi

# Visión por computadora
image = "0.24"
ort = "2.0"     # Para modelos ONNX
ndarray = "0.16"
async-trait = "0.1"

# Tiempo y utilidades
chrono = { version = "0.4", features = ["serde"] }
instant = "0.1"

[dev-dependencies]
tokio = { version = "1.0", features = ["full", "macros", "rt-multi-thread"] }
tempfile = "3.8"

[features]
default = ["basic-sensors"]
advanced-vision = ["ort", "ndarray"]
hardware-accel = ["rppal"]
simulation = []

[profile.dev]
opt-level = 0
debug = true

[profile.release]
opt-level = 3
lto = true
debug = false
